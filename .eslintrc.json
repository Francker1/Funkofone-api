{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base"
    ],
    "plugins": [
        "eslint-plugin-prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "rules": {
        "prettier/prettier": "error",
        "semi": [
            "warn",
            "always",
            {
                "omitLastInOneLineBlock": false
            }
        ],
        "import/extensions": [
            "off"
        ],
        "no-param-reassign": 0
    }
}
